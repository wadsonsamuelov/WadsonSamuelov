def somar(a, b):
    return a + b

def subtrair(a, b):
    return a - b

def multiplicar(a, b):
    return a * b

def dividir(a, b):
    if b == 0:
        return "Erro: divis√£o por zero!"
    return a / b

# Programa principal
def main():
    print("===== CALCULADORA SIMPLES =====")
    print("Opera√ß√µes dispon√≠veis:")
    print("1 - Soma")
    print("2 - Subtra√ß√£o")
    print("3 - Multiplica√ß√£o")
    print("4 - Divis√£o")
    print("0 - Sair")

    while True:
        try:
            opcao = int(input("\nEscolha uma opera√ß√£o: "))

            if opcao == 0:
                print("Encerrando... Obrigado por usar!")
                break

            if opcao not in [1, 2, 3, 4]:
                print("Op√ß√£o inv√°lida! Tente novamente.")
                continue

            n1 = float(input("Digite o primeiro n√∫mero: "))
            n2 = float(input("Digite o segundo n√∫mero: "))

            if opcao == 1:
                resultado = somar(n1, n2)
                operacao = "+"
            elif opcao == 2:
                resultado = subtrair(n1, n2)
                operacao = "-"
            elif opcao == 3:
                resultado = multiplicar(n1, n2)
                operacao = "*"
            elif opcao == 4:
                resultado = dividir(n1, n2)
                operacao = "/"

            print(f"\nResultado: {n1} {operacao} {n2} = {resultado}")

        except ValueError:
            print("Entrada inv√°lida! Digite apenas n√∫meros.")

# Executa o programa
if __name__ == "__main__":
    main()

